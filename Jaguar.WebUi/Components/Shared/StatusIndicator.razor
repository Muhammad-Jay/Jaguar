<div class="d-flex justify-content-between align-items-center font-monospace p-2 rounded-sm bg-dark text-white @(isHovering ? "bg-secondary" : "")"
    >
    
    <!-- Label -->
    <span class="text-secondary fw-lighter">@Label</span>
    
    <!-- Status Value with Accent -->
    <span class="d-flex align-items-center gap-2">
        <!-- Status Dot -->
        <span class="@GetColorClass() fs-6">&#9679;</span> 
        
        <!-- Status Text -->
        <span class="@GetColorClass() fw-bold border border-1 @GetBorderClass() px-2 py-1 rounded small status-glow">
            @Status
        </span>
    </span>
</div>

@code {
    /// <summary>
    /// The descriptive name of the system or data point.
    /// </summary>
    [Parameter] public string Label { get; set; } = "SYSTEM_COMPONENT";

    /// <summary>
    /// The current status value (e.g., "Online", "Low Latency", "Error").
    /// </summary>
    [Parameter] public string Status { get; set; } = "PENDING";

    /// <summary>
    /// Determines the Bootstrap color class based on status.
    /// </summary>
    private string GetColorClass() => Status.ToLower() switch
    {
        "online" or "optimized" or "active" or "ready" or "success" => "text-success",
        "error" or "failure" or "alert" or "danger" => "text-danger",
        "pending" or "low latency" or "warn" => "text-warning",
        _ => "text-info"
    };

    /// <summary>
    /// Adds a border class for visual emphasis.
    /// </summary>
    private string GetBorderClass() => Status.ToLower() switch
    {
        "online" or "optimized" or "active" or "ready" => "border-success",
        "error" or "failure" or "alert" => "border-danger",
        _ => "border-secondary"
    };
    
    private bool isHovering = false;
}