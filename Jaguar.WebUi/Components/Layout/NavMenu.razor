
<div class="flex flex-col h-full bg-black text-white border-r border-white/20 shadow-xl">

    <div class="flex-shrink-0 p-4 border-b border-white/20 relative">
        <div class="text-xl font-extrabold uppercase tracking-widest text-white/90 cyberpunk-monochrome-glow font-mono">
            // JAGUAR PLATFORM
        </div>

        <button title="Navigation menu" class="lg:hidden absolute top-4 right-4 text-white hover:text-gray-400 focus:outline-none" @onclick="ToggleNavMenu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
        </button>
    </div>

    <div class="@NavMenuCssClass lg:block flex-grow overflow-y-auto">
        <nav class="flex flex-col p-0">

            <div class="px-4 py-3 text-xs text-gray-500 uppercase font-mono border-b border-white/10">
                [DATA STREAMS]
            </div>

            <div class="nav-item">
                <NavLink class="nav-link-monochrome" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill mr-3" aria-hidden="true"></span> CORE // Dashboard
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link-monochrome" href="editor">
                    <span class="bi bi-code-square mr-3" aria-hidden="true"></span> SCRIPTS // Editor
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link-monochrome" href="logs">
                    <span class="bi bi-file-earmark-code-fill mr-3" aria-hidden="true"></span> LOGS // Archive
                </NavLink>
            </div>

            <div class="px-4 py-3 text-xs text-gray-500 uppercase font-mono border-t border-white/10 border-b border-white/10">
                [SYSTEM ACCESS]
            </div>

            <div class="nav-item">
                <NavLink class="nav-link-monochrome" href="diagnostics">
                    <span class="bi bi-activity mr-3" aria-hidden="true"></span> MONITOR // Diagnostics
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link-monochrome" href="config">
                    <span class="bi bi-gear-fill mr-3" aria-hidden="true"></span> CONFIG // Settings
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code {
private bool collapseNavMenu = true;

// Use Tailwind's hidden/block utilities for responsiveness
private string? NavMenuCssClass => collapseNavMenu ? "hidden" : "block";

private void ToggleNavMenu()
{
collapseNavMenu = !collapseNavMenu;
}
}

