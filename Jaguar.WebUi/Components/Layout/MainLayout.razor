@using Jaguar.Core.States
@using Jaguar.WebUi.Components.Layout.Menu
@using Jaguar.WebUi.Components.Shared.Panels
@inherits LayoutComponentBase

<div class="flex h-screen center flex-col overflow-hidden bg-black text-gray-50">
    
    <TopbarMenu/>
    <div class="container-full center">
        <!-- Sidebar -->
        <LeftSidebarMenu />

        <!-- Main Content Wrapper -->
        <div class="flex flex-col flex-1 overflow-x-hidden">
            <!-- Main Content Area -->
            <main class="flex-1 relative overflow-hidden p-6 transition-all duration-300">
                <!-- Content Body Placeholder -->
                <div class="mt-6">
                    @Body
                </div>
               
            </main>
        </div>
        <RightSidebarMenu/> 
    </div>
</div>

@code {
    private bool _isSidebarCollapsed = ClickEvents.IsRightMenuOpen;
}