@inherits LayoutComponentBase

<style>
    /* Custom styles for the Cyberpunk look */
    /* Adjusting glow color to match Bootstrap's success color palette */
    .cyberpunk-glow-text {
        text-shadow: 0 0 7px rgba(25, 135, 84, 0.7), 0 0 15px rgba(25, 135, 84, 0.4); /* Bootstrap Success Glow */
        transition: text-shadow 0.3s ease;
    }
    .cyberpunk-glow-border {
        box-shadow: 0 0 10px rgba(25, 135, 84, 0.5); /* Bootstrap Success Border Glow */
    }
    .blinking {
        animation: blink-animation 1s steps(5, start) infinite;
    }
    @@keyframes blink-animation {
        to { visibility: hidden; }
    }
    /* Main background pattern */
    .cyberpunk-bg {
        background-color: #0d0d10; /* Very dark background */
        background-image: 
            linear-gradient(90deg, #1f1f25 1px, transparent 1px),
            linear-gradient(#1f1f25 1px, transparent 1px);
        background-size: 50px 50px; /* Subtle grid pattern */
    }
    
    /* Custom width for the sidebar (equivalent to Tailwind w-64) */
    .sidebar-custom-width {
        width: 16rem; /* 256px */
    }

    /* Set minimum height for the content area */
    .min-vh-85 {
        min-height: 85vh;
    }
</style>

<!-- Main Container: Dark Background and Grid Pattern -->
<div class="page d-flex vh-100 cyberpunk-bg text-white font-monospace">
    
    <!-- Sidebar: Fixed width, high contrast, glowing border (using custom width) -->
    <div class="sidebar sidebar-custom-width flex-shrink-0 h-100 position-sticky top-0 bg-dark border-end border-success border-opacity-50">
        <!-- Assuming NavMenu is a child component that handles its own styling -->
        <NavMenu />
    </div>

    <!-- Main Content Area: Flexible width, overflow scrolling -->
    <main class="flex-grow-1 p-4 p-md-5 overflow-y-auto">
        
        <!-- Top Bar / Header Element -->
        <header class="mb-4 p-3 border-bottom border-success border-opacity-50 d-flex justify-content-between align-items-center bg-dark rounded-3 cyberpunk-glow-border shadow">
            <h1 class="h3 fw-bold tracking-tight text-white cyberpunk-glow-text mb-0">
                <span class="text-success">JAGUAR</span> // Interface Terminal
            </h1>
            <div class="small text-secondary font-monospace">
                [USER_ID: 7a8f1b9c]
            </div>
        </header>

        <!-- Article/Body Content Area -->
        <article class="content w-100 bg-dark p-4 rounded-4 border border-success border-opacity-25 shadow-lg min-vh-85">
            @Body
        </article>
    </main>
</div>

<!-- Error UI - Styled for the dark theme using Bootstrap classes -->
<div id="blazor-error-ui" class="bg-danger text-white p-2 small border border-danger-subtle rounded position-fixed bottom-0 end-0 m-3 shadow-lg">
    <div class="d-flex justify-content-between align-items-center">
        <span>[ERROR] Unhandled System Anomaly Detected.</span>
        <a href="" class="reload text-warning ms-4 link-warning link-opacity-75-hover text-decoration-none">RELOAD</a>
        <a class="dismiss text-danger ms-2 link-danger link-opacity-75-hover text-decoration-none">🗙</a>
    </div>
</div>