<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Jaguar.Desktop.ViewModels.Templates"
             xmlns:models="clr-namespace:Jaguar.Desktop.Models"
             x:DataType="viewModels:AgentTemplatesViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jaguar.Desktop.CustomViews.Templates.AgentTemplatesView">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding AvailableTemplates}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:FlowNode">
                    <Border Margin="20" 
                            Padding="12" 
                            Background="#1A1A1A" 
                            BorderThickness="1" 
                            CornerRadius="8"
                            PointerPressed="OnTemplatePointerPressed"
                            Cursor="Hand">
                    
                        <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Text="â—ˆ" Foreground="#00C8FF" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Title}" Foreground="White" FontSize="13" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Type}" Foreground="#666" FontSize="10"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
