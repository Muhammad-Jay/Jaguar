<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:viewModels="clr-namespace:Jaguar.Desktop.ViewModels.Menus"
             x:DataType="viewModels:TopBarMenuViewModel"
             x:Class="Jaguar.Desktop.CustomViews.ManuBars.TopMenuBarView">
    <Border Height="30" Background="Black"  Padding="30, 5, 20,0">
       <ItemsControl
           ItemsSource="{Binding MenuItems}"
           ScrollViewer.HorizontalScrollBarVisibility="Auto" 
           ScrollViewer.VerticalScrollBarVisibility="Disabled"
           >
           <ItemsControl.ItemsPanel>
               <ItemsPanelTemplate>
                   <StackPanel Orientation="Horizontal" Spacing="10" Background="Black"/>
               </ItemsPanelTemplate>
           </ItemsControl.ItemsPanel>
           <ItemsControl.ItemTemplate>
               <DataTemplate>
                   <Button 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Classes="MenuBtn"
                       Content="{Binding name}"
                       FontSize="10"
                       FontWeight="Regular"
                       Foreground="DarkGray"
                       >
                       
                   </Button>
               </DataTemplate>
           </ItemsControl.ItemTemplate>
       </ItemsControl>
     
    </Border>
</UserControl>
