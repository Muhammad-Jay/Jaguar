<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Jaguar.Desktop.ViewModels"
             xmlns:panels="clr-namespace:Jaguar.Desktop.CustomViews.Panels"
             x:DataType="viewModels:WorkflowViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jaguar.Desktop.Views.WorkflowView">
    <Grid IsHitTestVisible="True">
        <panels:PanelWrapper IsVisible="{Binding IsOverlayVisible}"/>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="40">
                <StackPanel>
                    <TextBlock Text="Jaguar Workflow Control" />
                    <Button Content="{Binding IsOverlayVisible}" Command="{Binding ToggleOverlayCommand}" />
                </StackPanel>
        </Border>
        <!-- <panels:PanelWrapper HorizontalAlignment="Right" IsVisible="{Binding IsOverlayVisible}"/> -->
    </Grid>
</UserControl>
