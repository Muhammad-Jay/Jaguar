<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Jaguar.Desktop.ViewModels"
             xmlns:models="clr-namespace:Jaguar.Desktop.Models"
             xmlns:avalonia="clr-namespace:Nodify.Avalonia;assembly=Nodify.Avalonia"
             x:DataType="viewModels:CanvasViewModel"
             x:Class="Jaguar.Desktop.Views.CanvasView">
   
    <Grid>
        <avalonia:NodifyEditor ItemsSource="{Binding Nodes}"
                               Connections="{Binding Connections}"
                               Width="1000"
                               Height="300"
                               PendingConnection="{Binding PendingConnection, Mode=TwoWay}">
            <!-- <avalonia:NodifyEditor.DataContext> -->
            <!--     <viewModels:CanvasViewModel /> -->
            <!-- </avalonia:NodifyEditor.DataContext> -->
            
            <avalonia:NodifyEditor.ItemTemplate>
                <DataTemplate DataType="models:FlowNode">
                    <Border Width="150" Height="100" Background="White" CornerRadius="10">
                   
                    </Border>
                </DataTemplate>
            </avalonia:NodifyEditor.ItemTemplate>
        </avalonia:NodifyEditor>
    </Grid>
</UserControl>
