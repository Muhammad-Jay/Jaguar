<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Jaguar.Desktop.ViewModels"
        xmlns:v="using:Jaguar.Desktop.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Jaguar.Desktop.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Title="Jaguar.Desktop">
    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>
    
   <DockPanel>
           <Border
               HorizontalAlignment="{Binding  IsDialogOpen}"
               Margin="50, 0, 0, 0"
               Width="300"
               Height="500"
               BorderBrush="Purple"
               BorderThickness="1"
               CornerRadius="20"
               Background="DimGray"
               >
               
           </Border>
       <Grid ColumnDefinitions="40, *, 40">
    
           <Border Grid.Column="0" Background="Black">
               <StackPanel Margin="5">
                   <Button Content=" " 
                           Width="20"
                           Height="20"
                           Command="{Binding SetContent}"
                           CornerRadius="5"
                           BorderThickness="1"
                           BorderBrush="Purple"
                           Background="#1E1E1E"
                           HorizontalAlignment="Stretch" 
                           Margin="0, 5" 
                           />
            
                   <Button Content=" " 
                           Width="20"
                           Height="20"
                           CornerRadius="5"
                           BorderThickness="1"
                           BorderBrush="Purple"
                           Background="#1E1E1E"
                           HorizontalAlignment="Stretch" 
                           Margin="0, 5" 
                   />
                   
                   <Button Content=" " 
                           Width="20"
                           Height="20"
                           CornerRadius="5"
                           BorderThickness="1"
                           BorderBrush="Purple"
                           Background="#1E1E1E"
                           HorizontalAlignment="Stretch" 
                           Margin="0, 5" 
                   />
               </StackPanel>
           </Border>

           <Border Grid.Column="1" 
                   BorderThickness="0, 0, 0, 0" 
                   Background="Black">
                <ContentControl Content="{Binding Content}" Margin="15"/>
           </Border>
           
           <Border Grid.Column="2" Background="Black">
               <StackPanel Margin="5">
                   <Button Content=" " 
                           Width="20"
                           Height="20"
                           CornerRadius="5"
                           BorderThickness="1"
                           BorderBrush="Purple"
                           Background="#1E1E1E"
                           HorizontalAlignment="Stretch" 
                           Margin="0, 5" 
                   />
            
                   <Button Content=" " 
                           Width="20"
                           Height="20"
                           CornerRadius="5"
                           BorderThickness="1"
                           BorderBrush="Purple"
                           Background="#1E1E1E"
                           HorizontalAlignment="Stretch" 
                           Margin="0, 5" 
                   />
                   
                   <Button Content=" " 
                           Width="20"
                           Height="20"
                           CornerRadius="5"
                           BorderThickness="1"
                           BorderBrush="Purple"
                           Background="#1E1E1E"
                           HorizontalAlignment="Stretch" 
                           Margin="0, 5" 
                   />
               </StackPanel>
           </Border>
       </Grid>
   </DockPanel>
</Window>
