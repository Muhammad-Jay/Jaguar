<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Jaguar.Desktop.App"
             RequestedThemeVariant="Dark">
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Nodify/Themes/Dark.axaml"/>
        <StyleInclude Source="Styles/GlobalStyles.axaml"/>
        <Style Selector="ScrollBar /template/ Thumb">
            <Setter Property="Background" Value="#3300C8FF"/>
        </Style>
    </Application.Styles>
</Application>