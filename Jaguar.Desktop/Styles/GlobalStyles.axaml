<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Button.MenuBtn">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.4"/>
            </Transitions>
        </Setter>
        <Style.Animations>
            <Animation Duration="0:0:0.4" FillMode="Forward" IterationCount="1">
                <KeyFrame Cue="0%">
                    <Setter Property="Opacity" Value="0"/>
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="Opacity" Value="1"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
        <Style Selector="^:pressed">
            <Style.Animations>
                <Animation Duration="0:0:0.4" IterationCount="1">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="Background" Value="#00cbe6"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Style>
    
    <!-- Add Styles Here -->
</Styles>
